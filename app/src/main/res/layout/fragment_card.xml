<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    tools:context="com.gogocosmo.cosmoqiu.fire_sticker.Fragment.CardFragment">

    <TextView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/PURE_BLACK"
        android:textSize="22sp"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="5dp"
        android:id="@+id/item_card_bookmark"
        android:src="@drawable/bookmark_action_improved" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/item_card_done"
        android:src="@drawable/done"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="25dp"
        android:id="@+id/item_card_lock"
        android:src="@drawable/lock_transparent"
        android:scaleType="centerInside" />

</FrameLayout>
