<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_selector">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="3dp"
        android:background="@drawable/whiterounded_view"
        android:layout_margin="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Happy Titile"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/GREY800"
                android:textSize="17sp"
                android:paddingTop="20dp"
                android:paddingBottom="7dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="start"
                android:singleLine="true"
                android:ellipsize="marquee" />

            <TextView
                android:id="@+id/item_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'm an awesome question demo."
                android:fontFamily="sans-serif"
                android:textColor="@color/GREY700"
                android:textSize="12sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="-4dp"
                android:maxLines="4"
                android:ellipsize="marquee" />

            <TextView
                android:id="@+id/item_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'm an exciting answer demo."
                android:fontFamily="sans-serif"
                android:textColor="@color/GREY700"
                android:textSize="12sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="12sp"
                android:paddingBottom="5dp"
                android:maxLines="4"
                android:ellipsize="marquee" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_update_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text=""
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/GREY"
            android:textSize="10sp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:maxLines="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/item_bookmark"
            android:src="@drawable/bookmark_action_improved" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/item_done"
            android:src="@drawable/done"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:id="@+id/item_lock"
            android:src="@drawable/lock_opaque"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/item_poker_top"
            android:src="@drawable/black_spade_k_top"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/item_poker_bottom"
            android:src="@drawable/black_spade_k_upsidedown"
            android:scaleType="centerInside" />


    </FrameLayout>
</FrameLayout>