<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/EDIT_GROUP_LIST_ITEM_HEIGHT"
    android:background="@drawable/pressed_background_indicator">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="@dimen/EDIT_GROUP_LIST_ITEM_HEIGHT"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/rowIcon"
        android:src="@drawable/folder_action" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/EDIT_GROUP_LIST_ITEM_HEIGHT"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/PURE_BLACK"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:text="Awesome Group Name" />


        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:progress="80"
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/custom_progressbar" />

    </LinearLayout>


    <TextView
        android:id="@+id/group_size"
        android:layout_width="50dp"
        android:layout_height="@dimen/EDIT_GROUP_LIST_ITEM_HEIGHT"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="@color/PURE_BLACK"
        android:textSize="15sp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="99" />

</LinearLayout>